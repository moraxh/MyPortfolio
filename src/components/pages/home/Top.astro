---
  import Button from "../../common/Button.astro";
  import Icon from "../../common/Icon.astro";
  import { FIGMA_LINK } from "astro:env/server";
---

<header class="w-full flex items-center justify-end bg-transparent max-w-[2000px]">
  {FIGMA_LINK && (
    <Button href={FIGMA_LINK} target="_blank" class:list={["animation-fade-in"]}>
      Figma Design
      <Icon name="figma" class="stroke-current xs:w-3 w-4" />
    </Button>
  )}
</header>