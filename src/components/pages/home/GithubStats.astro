---
  import StatsCard from "../../common/StatsCard.astro"

  const origin = Astro.url.origin;

  // Get github stats 
  const response = await fetch(`${origin}/api/repos.json`);
  const repos = response.ok ? await response.json() : [];
---

<StatsCard class="!justify-between bg-primary text-bg" primary={repos.length} secondary="GITHUB REPOSITORIES" />