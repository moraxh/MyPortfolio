---
  const { title, description, class: className, ...rest } = Astro.props;
---

<article class:list={[
  className,
  "flex flex-col items-center justify-center"
  ]} {...rest}>
  <h2 class="text-5xl font-bold text-center from-primary to-60% to-accent text-transparent bg-gradient-to-b bg-clip-text">{title}</h2>
  <h4 class="text-lg font-bold text-center text-balance">{description}</h4>
  <div class="bg-bg-secondary p-4 rounded-lg mt-3 shadow-danger">
    <slot />
  </div>
</article>

<style>
  div {
    box-shadow: 0px 0px 10px;;
  }
</style>